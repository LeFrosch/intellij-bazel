<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <xdebugger.breakpointType implementation="com.google.idea.blaze.skylark.debugger.impl.SkylarkLineBreakpointType"/>
    <programRunner implementation="com.google.idea.blaze.skylark.debugger.run.SkylarkDebugRunner" id="SkylarkDebugRunner"/>
    <completion.contributor language="BUILD" implementationClass="com.google.idea.blaze.skylark.debugger.impl.DebuggerCompletionContributor"/>
    <executor implementation="com.google.idea.blaze.skylark.debugger.run.SkylarkDebugExecutor"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory
      implementation="com.google.idea.blaze.skylark.lang.SkylarkFileTypeFactory"/>
    <lang.syntaxHighlighterFactory
      language="Skylark"
      implementationClass="com.google.idea.blaze.skylark.lang.highlighting.SkylarkSyntaxHighlighter$Factory"/>
    <lang.parserDefinition
      language="Skylark"
      implementationClass="com.google.idea.blaze.skylark.lang.psi.SkylarkParserDefinition"/>
    <annotator
      language="Skylark"
      implementationClass="com.google.idea.blaze.skylark.lang.highlighting.SkylarkHighlightAnnotator"/>
    <additionalTextAttributes
      file="resources/colorSchemes/SkylarkDefault.xml"
      scheme="Default"/>
    <additionalTextAttributes
      file="resources/colorSchemes/SkylarkDarcula.xml"
      scheme="Darcula"/>
    <colorSettingsPage
      implementation="com.google.idea.blaze.skylark.lang.highlighting.SkylarkColorSettingsPage"/>

    <platform.lsp.serverSupportProvider
      implementation="com.google.idea.blaze.skylark.lang.strpls.StarplsServerProvider"/>

    <registryKey
      defaultValue="false"
      description="Use the starpls LSP for Starlark"
      key="bazel.starlark.lsp.enabled"
      restartRequired="true"/>

  </extensions>

  <extensions defaultExtensionNs="com.google.idea.blaze">
    <BuildFlagsProvider implementation="com.google.idea.blaze.skylark.debugger.run.SkylarkDebugBuildFlagsProvider"/>
  </extensions>

  <actions>
    <action class="com.google.idea.blaze.skylark.debugger.run.SkylarkDebugAction" id="RunDashboard.SkylarkDebugAction">
      <add-to-group  group-id="RunDashboardContentToolbar" anchor="after" relative-to-action="RunDashboard.Debug"/>
    </action>
  </actions>
</idea-plugin>
